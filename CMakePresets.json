{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_VERSION": "10.0.17763.0",
                "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
                "CMAKE_SKIP_INSTALL_ALL_DEPENDENCY": true
            },
          "environment": {
            "PATH": "$penv{DevEnvDir}\\CommonExtensions\\Microsoft\\CMake\\Ninja;$penv{PATH}"
          }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "binaryDir": "${sourceDir}/build/debug",
            "installDir": "${sourceDir}/out/debug",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
            "name": "debug-msvc",
            "displayName": "Debug (MSVC)",
            "binaryDir": "${sourceDir}/build/debug-msvc",
            "installDir": "${sourceDir}/out/debug-msvc",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "binaryDir": "${sourceDir}/build/release",
            "installDir": "${sourceDir}/out/release",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        }
    ],
    "buildPresets": [
      {
        "name": "debug",
        "configurePreset": "debug"
      },
      {
        "name": "debug-msvc",
        "configurePreset": "debug-msvc"
      },
      {
        "name": "release",
        "configurePreset": "release"
      }
    ]
}
