{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "binaryDir": "${sourceDir}/build/debug",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "binaryDir": "${sourceDir}/build/release",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-noswift",
            "displayName": "Debug, no Swift",
            "binaryDir": "${sourceDir}/build/debug-noswift",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "NO_SWIFT": true
            }
        },
        {
            "name": "release-noswift",
            "displayName": "Release, no Swift",
            "binaryDir": "${sourceDir}/build/release-noswift",
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "NO_SWIFT": true
            }
        }
    ],
    "buildPresets": [
      {
        "name": "debug",
        "configurePreset": "debug"
      },
      {
        "name": "release",
        "configurePreset": "release"
      },
      {
        "name": "debug-noswift",
        "configurePreset": "debug-noswift"
      },
      {
        "name": "release-noswift",
        "configurePreset": "release-noswift"
      }
    ]
}